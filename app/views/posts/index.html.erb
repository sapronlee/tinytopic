<ul class="posts">
<% @posts.each do |post| %>
  <li class="item">
    <div class="body"><%=simple_format h post.body %></div>
		<div class="edit"><%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></div>
		<div class="tags">
			<%= post.tags.collect { |tag| tag.name } %>
		</div>
		<div class="info">
			<%= h post.user.name %> created on <%= time_ago_in_words(post.created_at) %>
			<a href="#" class="comment"><%=h post.comments_count %></a>
		</div>
  </li>
<% end %>
</ul>
<%= will_paginate @posts %>

