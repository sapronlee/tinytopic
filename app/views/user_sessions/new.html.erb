<h1>登陆</h1>
<div class="form">
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= notice_message %>
  <%= f.error_messages %>
	<p>
  <%= f.label :login,"用户名:" %><br />
  <%= f.text_field :login %>
  </p>
	<p>
  <%= f.label :password, "密码:" %><br />
  <%= f.password_field :password %>
  </p>
	<p>
  <%= f.check_box :remember_me %><%= f.label :remember_me, "记住登陆状态" %><br />
  </p>
	<p>
  <%= f.submit "登陆" %>  或者 <a href="<%= new_account_path %>">注册一个</a>
	</p>
<% end %>
</div>
